{
  "name": "@superlc/md-monorepo",
  "version": "0.0.0",
  "description": "基于 unified 的多框架 Markdown 渲染组件库",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm storybook:react",
    "dev:react": "pnpm storybook:react",
    "dev:vue": "pnpm storybook:vue",
    "dev:all": "concurrently \"pnpm storybook:react\" \"pnpm storybook:vue\"",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @superlc/md-core build",
    "build:react": "pnpm --filter @superlc/md-react build",
    "build:vue": "pnpm --filter @superlc/md-vue build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "pnpm storybook:react",
    "storybook:react": "storybook dev -p 6006 -c .storybook",
    "storybook:vue": "storybook dev -p 6007 -c .storybook-vue",
    "build:storybook": "pnpm build:storybook:react && pnpm build:storybook:vue",
    "build:storybook:react": "storybook build -c .storybook -o storybook-static/react",
    "build:storybook:vue": "storybook build -c .storybook-vue -o storybook-static/vue",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/vue3": "^8.0.0",
    "@storybook/vue3-vite": "^8.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vue": "^9.20.0",
    "prettier": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.0.0",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.2.0",
    "vue": "^3.4.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.21.5"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}