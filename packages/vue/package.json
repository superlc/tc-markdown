{
  "name": "@superlc/md-vue",
  "version": "0.2.1",
  "description": "基于 @superlc/md-core 的 Vue 3 Markdown 渲染组件",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "@superlc/md-core/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@superlc/md-core": "workspace:*",
    "katex": "^0.16.28"
  },
  "peerDependencies": {
    "vue": ">=3.3.0",
    "mermaid": ">=10.0.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/hast": "^3.0.0",
    "vue": "^3.4.0"
  },
  "keywords": [
    "markdown",
    "vue",
    "vue3",
    "component",
    "unified"
  ],
  "license": "MIT"
}
