{
  "name": "@tc/md-react",
  "version": "0.1.0",
  "description": "基于 @tc/md-core 的 React Markdown 渲染组件",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@tc/md-core": "workspace:*",
    "hast-util-to-jsx-runtime": "^2.3.0"
  },
  "optionalDependencies": {
    "dompurify": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "markdown",
    "react",
    "component",
    "unified"
